@model IEnumerable<MinesweeperASP.NET.Models.gridDTO>
    <!DOCTYPE html>
    <html lang="en">

    <head>
    
        <style>

            body {
                background-image: url('/img/fog.jpg');
                background-size: cover;
            }
            table {
                padding:30px;
            }
        </style>

    </head>
        <body>
            <section>

                <table class="table table-dark table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">
                                Game ID
                            </th>

                            <th scope="col">
                                Date
                            </th>
                            <th scope="col">
                                Load
                            </th>
                            <th scope="col">
                                Delete
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr scope="row">
                                <td class="table-dark">
                                    @Html.DisplayFor(modelItem => item.ID)
                                </td>

                                <td class="table-dark">
                                    @Html.DisplayFor(modelItem => item.date)
                                </td>

                                <td>


                                    @using (Html.BeginForm("Load", "Grid"))
                                    {

                                        <button class="btn-outline-success" name="load" type="submit" value="@item.ID">Load</button>
                                    }
                                </td>
                                <td>
                                    @using (Html.BeginForm("Delete", "Grid"))
                                    {
                                        <button class="btn-outline-danger" name="delete" type="submit" value="@item.ID">Delete</button>

                                    }
                                </td>


                            </tr>
                        }
                    </tbody>
                </table>

            </section>
        </body>
</html>
