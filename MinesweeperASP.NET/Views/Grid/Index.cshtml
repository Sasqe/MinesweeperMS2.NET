@model MinesweeperASP.NET.Models.Board
@using MinesweeperASP.NET.Controllers;
@{
    GridController buttonController = new GridController();
    
}
<style>
    .game-button {
        width: 85px;
    }

    .game-button-image {
        width: 70px;
    }

    .button-zone {
        display: flex;
        flex-wrap: wrap;
    }

    .line-break {
        flex-basis: 100%;
        height: 0;
    }

    .button-label {
        font-size: 8px;
        text-align: center;
    }
</style>

@{
    //store image names in an array for more efficient code.
    string[] imageNames = { "grey.png", "green.png", "bomb.png", "flag.png" };
}
<form>
    <div class="button-zone">
        @for (int i = 0; i < Model.Size; i++)
        {

            @for (int j = 0; j < Model.Size; j++)
            {
                if (j % Model.Size == 0)
                {
                    <div class="line-break"></div>
                }
                if (!Model.thisGame[i, j].isVisited)
                {
                    <button class="game-button" type="submit" value="@i, @j" name="cellNumber" asp-controller="Grid" asp-action="HandleLeftClick">
                        <img class="game-button-image" src="~/img/@imageNames[0]" />
                        <div class="button-label">
                            @Model.thisGame[i, j].rowNumber
                            ,
                            @Model.thisGame[i, j].colNumber
                        </div>
                    </button>
                }

                if (Model.thisGame[i, j].isVisited && Model.thisGame[i, j].isLive)
                {
                    <button class="game-button" type="submit" value="@i, @j" name="cellNumber" asp-controller="Grid" asp-action="HandleLeftClick">
                        <img class="game-button-image" src="~/img/@imageNames[2]" />
                        <div class="button-label">
                            @Model.thisGame[i, j].rowNumber
                            ,
                            @Model.thisGame[i, j].colNumber
                        </div>
                    </button>
                }
                else if (Model.thisGame[i, j].isVisited && !Model.thisGame[i, j].isLive)
                {
                    <button class="game-button" type="submit" value="@i, @j" name="cellNumber" asp-controller="Grid" asp-action="HandleLeftClick">
                        <img class="game-button-image" src="~/img/@imageNames[1]" />
                        <div class="button-label">
                            @Model.thisGame[i, j].rowNumber
                            ,
                            @Model.thisGame[i, j].colNumber
                        </div>
                    </button>
                }



            }


        }



    </div>

</form>
<div>
    <a asp-controller="Home" asp-action="Index">Back To Home</a>
</div>

